<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">

	<insert id="insertUser" parameterType="map">
		<![CDATA[
			INSERT INTO 
				`SBE_USR`
				(
					`SBE_USR_ID`, `SBE_USR_PW`, `SBE_USR_NAME`, `SBE_USR_BIRTH_DAY`,
					`SBE_USR_GENDER`, `SBE_USR_CONTACT`, `SBE_USR_EMAIL`, `SBE_USR_ZIP_CODE`,
					`SBE_USR_ADDRESS1`, `SBE_USR_ADDRESS2`
				)
			VALUES
				(
					#{userId}, #{userPassword}, #{userName}, #{userBirthDay},
					#{userGender}, #{userContact}, #{userEmail}, #{userZipCode}, 
					#{userAddress1}, #{userAddress2}
				)
		]]>
	</insert>

	<select id="getUserEncodedPassword" resultType="string" parameterType="string">
		<![CDATA[
			SELECT
				`SBE_USR_PW`
			FROM
				`SBE_USR`
			WHERE
				`SBE_USR_ID` = #{userId}
		]]>
	</select>

	<select id="isExistUser" resultType="boolean" parameterType="string">
		<![CDATA[
			SELECT
				IF (count(*) = 1, true, false) AS isExistUser
			FROM
				`SBE_USR`
			WHERE
				`SBE_USR_ID` = #{userId}
		]]>
	</select>

</mapper>